
@url = http://localhost:8000
###############################################
# Students Controller
###############################################

### Get all students
GET {{url}}/students

### Get all students with search
GET {{url}}/students?search=John

### Get student by ID
GET {{url}}/students/1

### Create new student
POST {{url}}/students
Content-Type: application/json

{
  "first_name": "John",
  "last_name": "Doe",
  "email": "john.doe@example.com",
  "enrollment_date": "2025-05-27",
  "role": "student",
  "degree_program": "BSc Computer Science",
  "gpa": 3.5,
  "department_id": 1
}

### Update student
PATCH {{url}}/students/1
Content-Type: application/json

{
  "firstName": "John",
  "lastName": "Smith",
  "degreeProgram": "MSc Computer Science"
}

### Delete student
DELETE {{url}}/students/1

